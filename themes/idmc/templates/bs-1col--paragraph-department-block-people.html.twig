<div class="row" style="background:#{{ content.field_department_background_colo.0 }};">
<div class="container department" style="background:#{{ content.field_department_background_colo.0 }};">
	<h1 class="paragraph-title">
		{{ content.field_depatment_people_title.0 }}
	</h1>
{%
set totalrow = (content.field_department_peoples['#items']|length >= 3) ? content.field_department_peoples['#items']|length : 3
%}
	{#} This is for sm/md/lg screens {#}
{% for i in range(0, totalrow,3) %}
	{% set random_group_id_large = 'random_group_id_large_' ~ random(99999999) %}
	<div id="{{ random_group_id_large }}" class="hidden-xs">
		<div class="col-xs-12" style="padding-top: 50px;">
			{% set read_more_random_ids_large = [] %}
			{% for j in range(0, 2) %}
				{% set key = i + j %}
				{% if content.field_department_peoples[key]['#paragraph'] %}

				{% set department_people = content.field_department_peoples[key]['#paragraph'] %}
				{% set people_img_src = file_url(department_people.field_department_people_icon.entity.fileuri|image_style('people_thumbnails')) %}
				{% set people_name = department_people.field_department_people_name.value %}
				{% set people_title = department_people.field_department_people_title.value %}
				{% set people_email = department_people.field_department_people_email.value %}
				{% set people_phone = department_people.field_department_people_phone.value %}
				<div class="col-sm-4 col-xs-12 text-center">
				    <div><img src="{{ people_img_src }}" style="border-radius: 50%;width: 127px;height: 127px;"></img></div>
				    {% if people_name %}<div class="people-heading"><span>{{ people_name }}</span></div>{% endif %}
									    <div class="hypen-rectangle"></div>

				    {% if people_title %}<div class="people-description"><span>{{ people_title }}</span></div>{% endif %}
				    
				    <div class="read-more">
				    	{% set random_id = 'read_more_' ~ random(99999999) %}
				    	{% set read_more_random_ids_large = read_more_random_ids_large|merge([random_id]) %}
				    	<a href="#{{ random_id }}" class="collapsed readmore" data-toggle="collapse" data-parent="#{{ random_group_id_large }}">
				    		<span class="span-text">Read more</span>
				    		<!-- <i class="fa fa-long-arrow-right combined-shape" aria-hidden="true"></i> -->
				    	</a>
				    </div>
				</div>

				{% endif %}
			{% endfor %}
		</div>
		{% for k in range(0, 2) %}
			{% set key2 = i + k %}
			{% set department_people = content.field_department_peoples[key2]['#paragraph'] %}
			{% set people_name = department_people.field_department_people_name.value %}
			{% set people_title = department_people.field_department_people_title.value %}
			{% set people_email = department_people.field_department_people_email.value %}
			{% set people_phone = department_people.field_department_people_phone.value %}
			<div class="panel" style="margin-bottom: 0px; border: 0;">
				<div class="col-xs-12 collapse" id="{{ read_more_random_ids_large[k] }}">
					{#} <p>{{ people_name }}<br>{{ people_title }}<br>{{ people_email }}<br>{{ people_phone }}</p> {#}
					{% if people_email %}<p class="" style="font-weight: bold;"><span>Email: <span style="color: #008dca">{{ people_email }}</span></span></p>{% endif%}
				    {% if people_phone %}<p class="" style="font-weight: bold;"><span>Phone: <span style="color: #008dca">{{ people_phone }}</span></span></p>{% endif%}
					<p>{{ department_people.field_people_read_more_expand.value|raw }}</p>
					
				</div>
			</div>
		{% endfor %}
	</div>
{% endfor %}

	{#}This is for xs screen{#}
	{% set random_group_id_small = 'random_group_id_small_' ~ random(99999999) %}
	<div id="{{ random_group_id_small }}" class="row xs-padding panel-group hidden-sm hidden-md hidden-lg">
		<!-- <div class="col-xs-12 panel" style="box-shadow: none;"> -->
		<div class="container">
			{% set read_more_random_ids_small = [] %}
			{% for key,value in content.field_department_peoples['#items'] %}
				{% set department_people = content.field_department_peoples[key]['#paragraph'] %}
				{% set people_img_src = file_url(department_people.field_department_people_icon.entity.fileuri|image_style('people_thumbnails')) %}
				{% set people_name = department_people.field_department_people_name.value %}
				{% set people_title = department_people.field_department_people_title.value %}
				{% set people_email = department_people.field_department_people_email.value %}
				{% set people_phone = department_people.field_department_people_phone.value %}
				<div class=" col-xs-12 text-center">
				    <div><img src="{{ people_img_src }}" style="border-radius: 50%;width: 127px;height: 127px;"></img></div>
				    {% if people_name %}<div class="people-heading"><span>{{ people_name }}</span></div>{% endif%}
									    <div class="hypen-rectangle"></div>

				    {% if people_title %}<div class="people-description"><span>{{ people_title }}</span></div>{% endif%}
				    
				    <div class="read-more">
				    	{% set random_id = 'read_more_' ~ random(99999999) %}
				    	{% set read_more_random_ids_small = read_more_random_ids_small|merge([random_id]) %}
				    	<a href="#{{ random_id }}" class="collapsed readmore" data-toggle="collapse" data-parent="#{{ random_group_id_small }}">
				    		<span class="span-text">Read more &nbsp;</span>
				    		<!-- <i class="fa fa-long-arrow-right combined-shape" aria-hidden="true"></i> -->
				    	</a>
				    </div>
				</div>
				<div class="panel-collapse collapse" id="{{ random_id }}" style="margin-bottom: 0px; border: 0;">
					<div class="col-xs-12" style="padding-bottom: 30px;">
						{#}<p>{{ people_name }}<br>{{ people_title }}<br>{{ people_email }}<br>{{ people_phone }}</p>{#}
						{% if people_email %}<p class="" style="font-weight: bold;"><span>Email: <span style="color: #008dca">{{ people_email }}</span></span></p>{% endif%}
				    {% if people_phone %}<p class="" style="font-weight: bold;"><span>Phone: <span style="color: #008dca">{{ people_phone }}</span></span></p>{% endif%}

						<p>{{ department_people.field_people_read_more_expand.value|raw }}</p>
						
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
</div>