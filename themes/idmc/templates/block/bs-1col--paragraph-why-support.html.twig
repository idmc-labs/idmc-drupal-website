{#

#}
{% block content %}
{% set url = "" %}
{% set file_uri_path = content.field_wsupport_background_image.0['#item'].entity.uri.value %}

{% if file_uri_path is not null %}
    {% set url = file_url(content.field_wsupport_background_image.0['#item'].entity.uri.value) %}
{% endif %}
<div class="row xs-padding wwd-block wsupport" style="background-image:url({{ url }}); background-size:cover;">

{% if paragraph.field_wsupport_background_color.value == "#fff" %}
	<div style="height:100%; width:100%; background:rgba(255,255,255,0.6); color: #000;padding-bottom: 60px;">
{% elseif paragraph.field_wsupport_background_color.value == "#f6f6f6" %}
	<div style="height:100%; width:100%; background:rgba(246,246,246,0.6); color: #000;padding-bottom: 60px;">
{% else %}
	<div style="height:100%; width:100%; background:rgba(51,49,50,0.6); color: #fff;padding-bottom: 60px;">
{% endif %}
	<div class="container">
    	<h1 class="paragraph-title">
	     	{{ paragraph.field_wsupport_title.value }}
		</h1>
		<div class="row" style="text-align:left">
			{{ paragraph.field_wsupport_body.value|raw }}
		</div>
		<div class="col-md-4 col-xs-12">
			<hr />
			{{ paragraph.field_wsupport_columns_text.0.value|raw }}
     	</div>
     	<div class="col-md-4 col-xs-12">
			<hr />
			{{ paragraph.field_wsupport_columns_text.1.value|raw }}
     	</div>
     	<div class="col-md-4 col-xs-12">
     		<hr />
			{{ paragraph.field_wsupport_columns_text.2.value|raw }}
     	</div>
    </div>
</div>
</div>
{% endblock %}
