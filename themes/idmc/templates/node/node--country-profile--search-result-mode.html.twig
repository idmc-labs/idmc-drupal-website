{% set text = node.body.summary %}

<div class="search-result-row">
    <div class="search-result-title">
        <a href="{{ url }}">{{ node.label }}</a>
    </div>
    <div class="search-result-type">{{ node.type.entity.label }}</div>
    <div class="search-result-content">
        {{ text|length > 600 ? text|slice(0, 600)|raw ~ '...' : text|raw }}
    </div>
</div>