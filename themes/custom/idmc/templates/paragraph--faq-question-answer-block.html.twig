<div class="container faq-question-container">
  <div class="row">
  <div class="col-xs-12">
  <div class="panel-group">
  	{% set collapse_random_id = 'faq_collapse_' ~ random(99999999) %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title faq-question-title" align="middle">
          <a data-toggle="collapse" href="#{{ collapse_random_id }}" class="collapsed">
            <div>
              {{ content.field_faq_question_title.0 }}  
            </div>
            <div>
              <img class="accordian-arrow-right" src="{{ directory }}/images/accordian-arrow-right.svg">
              <img class="accordian-arrow-down" src="{{ directory }}/images/accordian-arrow-down.svg">
            </div>
          </a>
        </div>
      </div>
      <div id="{{ collapse_random_id }}" class="panel-collapse collapse">
        <div class="panel-body">{{ content.field_faq_answer_content.0 }}</div>
      </div>
    </div>
  </div>
  </div>
  </div>
</div>